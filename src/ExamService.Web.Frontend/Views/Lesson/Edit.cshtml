@model LessonViewModel
@{
    ViewData["Title"] = "Ders Düzenleme";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Ders Düzenleme
        <small></small>
    </h1>

</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header">
            <i class="fa fa-edit"></i>
            <h3 class="box-title">Ders Düzenleme</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-controller="Lesson" asp-action="Edit" method="post" class="form-horizontal">
                        <input asp-for="Guid" type="hidden" />
                        <div class="row">
                            <div class="col-md-10 col-md-offset-2">
                                <div class="form-group">
                                    <label asp-for="Name" class="col-md-2 control-label"> </label>
                                    <div class="col-md-4">
                                        <input asp-for="Name" class="form-control" placeholder="Ders Adı" />
                                    </div>
                                    <div class="col-md-6">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-2">
                                <div class="form-group">
                                    <label asp-for="Code" class="col-md-2 control-label"></label>
                                    <div class="col-md-4">
                                        <input asp-for="Code" class="form-control" placeholder="Ders Kodu" />
                                    </div>
                                    <div class="col-md-6">
                                        <span asp-validation-for="Code" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-2">
                                <div class="form-group">
                                    <label asp-for="Hours" class="col-md-2 control-label"></label>
                                    <div class="col-md-4">
                                        <input asp-for="Hours" class="form-control" placeholder="Ders Saati" />
                                    </div>
                                    <div class="col-md-6">
                                        <span asp-validation-for="Hours" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-2">
                                <div class="form-group">
                                    <label asp-for="Akts" class="col-md-2 control-label"></label>
                                    <div class="col-md-4">
                                        <input asp-for="Akts" class="form-control" placeholder="Ders Akts'si" />
                                    </div>
                                    <div class="col-md-6">
                                        <span asp-validation-for="Akts" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-2">
                                <div class="form-group">
                                    <div class="col-md-4 col-md-offset-2">
                                        <button type="submit" class="btn btn-primary pull-right">Kaydet</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}




