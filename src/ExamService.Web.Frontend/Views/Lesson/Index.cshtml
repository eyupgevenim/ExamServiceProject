@model IEnumerable<LessonViewModel>
@{
    ViewData["Title"] = "Ders Listesi";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Ders Listesi
        <small></small>
    </h1>

</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">

                    <i class="fa fa-list"></i>
                    <h3 class="box-title">Ders Listesi</h3>
                    <span class="pull-right">
                        <a asp-controller="Lesson" asp-action="Create" class="btn btn-primary right-block">
                            DERS EKLE <i class="fa fa-plus"></i>
                        </a>
                    </span>

                </div>
                <div class="box-body">

                    <!-- lessons list -->
                    <div class="row">
                        <div class="col-md-12" id="questionsList">
                            <div class="box box-primary">
                                <div class="box-body pad table-responsive">
                                    <table class="table table-hover">
                                        <tr>
                                            <th>Adı</th>
                                            <th>Kodu</th>
                                            <th>Akts'si</th>
                                            <th>Saat</th>
                                            <th>Konu Sayısı</th>
                                            <th>Düzenleme</th>
                                            <th>Ayrıntı</th>
                                            <th>Silme</th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td>@item.Code</td>
                                                <td>@item.Akts</td>
                                                <td>@item.Hours</td>
                                                @if (item.Subjects != null)
                                                {
                                                    <td>@item.Subjects.Count</td>
                                                }
                                                else
                                                {
                                                    <td>0</td>
                                                }

                                                <td>
                                                    <a asp-controller="Lesson"
                                                       asp-action="Edit"
                                                       asp-route-id="@item.Guid" class="btn btn-primary">Düzenle</a>
                                                </td>
                                                <td>
                                                    <a asp-controller="Lesson"
                                                       asp-action="Details"
                                                       asp-route-id="@item.Guid" class="btn btn-primary">Ayrıntı</a>
                                                </td>
                                                <td>
                                                    <a asp-controller="Lesson"
                                                       asp-action="Delete"
                                                       asp-route-id="@item.Guid" class="btn btn-danger">Sil</a>
                                                </td>
                                            </tr>
                                        }
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div><!-- /.col -->
    </div><!-- ./row -->
</section><!-- /.content -->
