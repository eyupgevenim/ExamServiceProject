@model LessonViewModel
@{
    ViewData["Title"] = "Ders Silme";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Ders Silme
        <small></small>
    </h1>

</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="text-center"> Dersi silmek istediğinize emin misiniz?</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12" style="text-align:center">

                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-10 col-md-offset-2">
                                <div class="form-group">
                                    <label asp-for="Name" class="col-md-2 control-label"> </label>
                                    <div class="col-md-4">
                                        <span class="form-control">@Model.Name </span>
                                    </div>
                                    <div class="col-md-6">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-2">
                                <div class="form-group">
                                    <label asp-for="Code" class="col-md-2 control-label"></label>
                                    <div class="col-md-4">
                                        <span class="form-control">@Model.Code </span>
                                    </div>
                                    <div class="col-md-6">
                                        <span asp-validation-for="Code" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-2">
                                <div class="form-group">
                                    <label asp-for="Hours" class="col-md-2 control-label"></label>
                                    <div class="col-md-4">
                                        <span class="form-control">@Model.Hours </span>
                                    </div>
                                    <div class="col-md-6">
                                        <span asp-validation-for="Hours" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-2">
                                <div class="form-group">
                                    <label asp-for="Akts" class="col-md-2 control-label"></label>
                                    <div class="col-md-4">
                                        <span class="form-control">@Model.Akts </span>
                                    </div>
                                    <div class="col-md-6">
                                        <span asp-validation-for="Akts" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10 col-md-offset-2">
                                <div class="form-group">
                                    <div class="col-md-4 col-md-offset-2">
                                        <a asp-controller="Lesson" asp-action="Index" 
                                           class="btn btn-primary pull-right" style="margin-left:10px">İptal Et</a>
                                        <form asp-controller="Lesson" asp-action="Delete" method="post">
                                            <input type="hidden" name="id" id="id" value="@Model.Guid" />
                                            <input type="hidden" name="confirm" id="confirm" value="true" />
                                            <button type="submit" class="btn btn-danger pull-right">Sil</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


